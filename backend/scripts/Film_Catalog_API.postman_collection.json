{
  "info": {
    "name": "Film Catalog API",
    "description": "Complete API collection for the Film Catalog full-stack application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@filmes.com\",\n  \"senha\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "    console.log('JWT Token saved:', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Novo Usu√°rio\",\n  \"email\": \"novo@filmes.com\",\n  \"senha\": \"senha123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "üé¨ Movies",
      "item": [
        {
          "name": "Get All Movies",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/filmes",
              "host": ["{{base_url}}"],
              "path": ["filmes"]
            }
          }
        },
        {
          "name": "Get Movie by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/filmes/{movie_id}",
              "host": ["{{base_url}}"],
              "path": ["filmes", "{movie_id}"]
            }
          }
        },
        {
          "name": "Search Movies by Title",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/filmes/buscar?titulo=matrix",
              "host": ["{{base_url}}"],
              "path": ["filmes", "buscar"],
              "query": [
                {
                  "key": "titulo",
                  "value": "matrix"
                }
              ]
            }
          }
        },
        {
          "name": "Filter Movies by Genre",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/filmes/genero?genero=Drama",
              "host": ["{{base_url}}"],
              "path": ["filmes", "genero"],
              "query": [
                {
                  "key": "genero",
                  "value": "Drama"
                }
              ]
            }
          }
        },
        {
          "name": "Add New Movie (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titulo\": \"Novo Filme\",\n  \"imagemUrl\": \"https://exemplo.com/novo-filme.jpg\",\n  \"ano\": 2024,\n  \"generos\": [\"A√ß√£o\", \"Aventura\"],\n  \"sinopse\": \"Sinopse do novo filme...\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/filmes",
              "host": ["{{base_url}}"],
              "path": ["filmes"]
            }
          }
        },
        {
          "name": "Update Movie (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titulo\": \"T√≠tulo Atualizado\",\n  \"imagemUrl\": \"https://exemplo.com/atualizado.jpg\",\n  \"ano\": 2024,\n  \"generos\": [\"Drama\", \"Suspense\"],\n  \"sinopse\": \"Sinopse atualizada...\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/filmes/{movie_id}",
              "host": ["{{base_url}}"],
              "path": ["filmes", "{movie_id}"]
            }
          }
        },
        {
          "name": "Delete Movie (Admin)",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/filmes/{movie_id}",
              "host": ["{{base_url}}"],
              "path": ["filmes", "{movie_id}"]
            }
          }
        }
      ]
    },
